<%= simple_form_for @project, url: admin_project_path, method: :patch do |form| %>

  <%= form.error_notification %>

  <%= form.input :title %>
  <%= form.input :description %>

  <%= form.simple_fields_for :project_images do |f| %>

    <%= f.filepicker_field :filepicker_url %>

  <% end %>

  <%= form.simple_fields_for :tags do |tag| %>

    <%= render 'tag_fields', f: tag %>

  <% end %>

  <div class='links'>

    <%= link_to_add_association 'add tag', form, :tags, class: 'btn btn-primary' %>

    <%= form.submit %>

  </div>

<% end %>
